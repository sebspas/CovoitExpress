{% extends 'template.twig' %}

{% block content %}
<main>
<h1 id="home-title" class="center">New travels !</h1>
  <div class="container">
    <div class="row">
      {% for travel in travels %}
        <div class="col s12 m4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">{{ travel.startcity }} - {{ travel.endcity }}</span>
              <p>Depart : {{ travel.starttime|date("m/d/Y G:i", "America/New_York") }}</p>
              <p>Arrival : {{ travel.endtime|date("m/d/Y G:i", "America/New_York") }}</p>
              <p>$ {{ travel.price }}</p>
            </div>
            <div class="card-action">
              <a href="#">See more</a>
            </div>
          </div>
        </div>
      {% endfor %}
      </div>
  </div>
</main>

<footer class="page-footer modal-trigger" href="#unlike">
  <div class="container">
    <div class="row">
      <div class="center dark-grey col s12 bottom-line">
        <p><a class="modal-trigger" href="#unlike">Change these suggestions?</a></p>
      </div>
    </div>
  </div>
</footer>

  <!-- Modal Structure -->
  <div id="unlike" class="modal bottom-sheet">
    <div class="modal-content collection">
      {% for tag in tags %}
      <a href="#!" class="collection-item modal-action modal-close">Show less {{tag.name}}.</a>
      {% endfor %}
      <a href="#!" class="collection-item modal-action modal-close">I just want other suggestions.</a>
    </div>
  </div>

{% endblock %}